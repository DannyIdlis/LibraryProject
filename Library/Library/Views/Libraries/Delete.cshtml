@model Library.Models.Library

<link rel="stylesheet" href="~/Content/LibrariesMap.css" />

@{
    ViewBag.Title = "Delete";
}

<h2 id="pageTitle">Delete @Html.DisplayFor(model => model.libraryName)</h2>

<div class="control-label" col-md-2" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
    <br />
    <span class="label label-danger" style="font-size:18px;">Are you sure you want to delete this?</span>
</div>

<div>
    <br />
    <dl class="dl-horizontal" id="details">
        <dt>
            @Html.DisplayNameFor(model => model.libraryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.libraryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.libraryAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.libraryAddress)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color" style="margin-left: 8em">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    }

    <div style="margin-left:6.5em; font-size: 16px;">
        @Html.ActionLink("Back to List", "Index")
    </div>
    
</div>
